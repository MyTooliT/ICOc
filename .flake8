[flake8]

ignore =
  E402, # Module level import not at top of file
  W504, # Line break after binary operator
per-file-ignores = __init__.py:F401
exclude =
  .git,
  __pycache__,
  ._*,
  Documentation,
  HardwareTests,
  Scripts,
  VerificationInternal,
  VerificationInternalManual,
  Logger.py,
  MyToolItCommands.py,
  MyToolItNetworkNumbers.py,
  MyToolItSth.py,
  MyToolItStu.py,
  MyToolItTests.py,
  Plotter.py,
  SthLimits.py,
  StuLimits.py,
  configKeys.py,
  mwt.py,
  myToolItWatch.py,
  network.py,
  test.py,
  testSignal.py,
